@model User

<!DOCTYPE html>
<html>
<head>
    <title>Prijava</title>
</head>
<body>
    <h2>Prijava</h2>
    <form asp-action="Login" method="post">
        <div>
            <label asp-for="Username">Korisničko ime:</label>
            <input asp-for="Username" required>
        </div>
        <div>
            <label asp-for="Password">Lozinka:</label>
            <input asp-for="Password" type="password" required>
        </div>
        <div>
            <button type="submit">Prijavi se</button>
        </div>
    </form>
    <p>Nemate račun? <a asp-action="Register">Registrirajte se</a></p>
</body>
</html>